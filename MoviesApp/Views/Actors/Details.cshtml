@model MoviesApp.ViewModels.ActorViewModels.ActorViewModel

@{
    ViewBag.Title = "Details";
    Layout = "_Layout";
}

<h2>Details ^.^</h2>

<div>
    <h4>Actor</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="FirstName"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.FirstName
        </dd>
        <dt class="col-sm-2">
            <label asp-for="LastName"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.LastName
        </dd>
        <dt class="col-sm-2">
            <label asp-for="BirthDate"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.BirthDate.ToString("dd.MM.yyyy")
        </dd>
    </dl>
    
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>


